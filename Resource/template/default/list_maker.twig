{% if pel_ProductMakers[Product.id] is not empty and pel_ProductMakers[Product.id].Maker is not empty %}
    {% set pel_ProductMaker = pel_ProductMakers[Product.id] %}
    {% if not pel_ProductMaker.disabled %}
        <div class="plugin_maker_code">
            {% if pel_ProductMaker.maker_url|length > 0 %}
                <p class="item_code">メーカー： <a href="{{ pel_ProductMaker.maker_url }}" target="_blank">{{ pel_ProductMaker.Maker.name }}</a></p>
            {% else %}
                <p class="item_code">メーカー： {{ pel_ProductMaker.Maker.name }}</p>
            {% endif %}
        </div>
    {% endif %}
{% endif %}
